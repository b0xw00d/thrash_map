#login.animate.form
  %form{ action: "create", method: "post", autocomplete: "on" }
    %h1 Log In
    %p
      %label.uname{ for: "email" } email:
      %input#email{ name: "user[email]", required: "required", :type => "text" }
    %p
      %label.youpasswd{ for: "password" } password:
      %input#password{ name: "user[password]", required: "required", type: "password" }
    %p.login.button
      %input{ type: "submit", value: "Log In" }
      %a{ href: "/users/new"} Signup
